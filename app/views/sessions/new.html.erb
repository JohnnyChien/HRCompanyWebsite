<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-12">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= submit_tag 'Log In', class: 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>